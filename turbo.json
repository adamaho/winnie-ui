{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "inputs": ["src/**", "locales/**"],
      "outputs": ["dist/**"],
      "dependsOn": ["topo"]
    },
    "deploy:production": {
      "env": ["CLOUDFLARE_API_TOKEN", "CLOUDFLARE_DEFAULT_ACCOUNT_ID"],
      "outputLogs": "full",
      "dependsOn": ["topo"]
    },
    "format:check": {},
    "format:write": {},
    "lint:check": {},
    "lint:write": {},
    "topo": {
      "dependsOn": ["^topo"]
    },
    "tsc": {}
  }
}
