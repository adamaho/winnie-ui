---
import BaseHead from "~/layouts/base/base-head.astro";
import BaseLayout from "~/layouts/base/layout.astro";

import { ChevronsUpDown, Search } from "lucide-react";
---

<BaseLayout>
  <BaseHead slot="head" title="playground" description="playground" />
  <div class="center">
    <div class="row">
      <input
        data-component="input"
        data-size="sm"
        data-radius="round"
        placeholder="Search the docs..."
      />
      <input
        data-component="input"
        data-size="md"
        placeholder="Search the docs..."
      />
      <input
        data-component="input"
        data-size="lg"
        placeholder="Search the docs..."
      />
    </div>
    <div class="row">
      <div data-component="group">
        <Search data-component="icon" />
        <input
          data-component="input"
          data-size="sm"
          placeholder="Search the docs..."
        />
      </div>
      <div data-component="group">
        <Search data-component="icon" />
        <input
          data-component="input"
          data-size="md"
          placeholder="Search the docs..."
        />
      </div>
      <div data-component="group">
        <Search data-component="icon" />
        <input
          data-component="input"
          data-size="lg"
          placeholder="Search the docs..."
        />
      </div>
    </div>
    <div class="row">
      <div data-component="group">
        <input
          data-component="input"
          data-size="sm"
          placeholder="Search the docs..."
        />
        <ChevronsUpDown data-component="icon" />
      </div>
      <div data-component="group">
        <input
          data-component="input"
          data-size="md"
          placeholder="Search the docs..."
        />
        <ChevronsUpDown data-component="icon" />
      </div>
      <div data-component="group">
        <input
          data-component="input"
          data-size="lg"
          placeholder="Search the docs..."
        />
        <ChevronsUpDown data-component="icon" />
      </div>
    </div>
    <div class="row">
      <div data-component="group">
        <Search data-component="icon" />
        <input
          data-component="input"
          data-size="sm"
          placeholder="Search the docs..."
        />
        <ChevronsUpDown data-component="icon" />
      </div>
      <div data-component="group">
        <Search data-component="icon" />
        <input
          data-component="input"
          data-size="md"
          placeholder="Search the docs..."
        />
        <ChevronsUpDown data-component="icon" />
      </div>
      <div data-component="group">
        <Search data-component="icon" />
        <input
          data-component="input"
          data-size="lg"
          data-radius="round"
          placeholder="Search the docs..."
        />
        <ChevronsUpDown data-component="icon" />
      </div>
    </div>
  </div>
</BaseLayout>

<style>
  .center {
    display: flex;
    flex-direction: column;
    justify-content: center;
    gap: var(--wui-space-4);
    padding: var(--wui-space-5);
    height: 100dvh;
  }

  .row {
    align-items: center;
    display: flex;
    gap: var(--wui-space-4);
  }

  input {
    border: var(--wui-border-width-1) solid var(--wui-color-grey-7);
  }
</style>
